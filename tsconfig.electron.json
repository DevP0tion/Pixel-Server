{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "build",
		"rootDir": "electron",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"types": ["node", "electron"]
	},
	"include": ["electron/**/*"]
}
